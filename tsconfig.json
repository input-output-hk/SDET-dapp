{
	"compilerOptions": {
		"module": "commonjs",
    "target": "es2021",
		"moduleResolution": "node",
		"noEmit": true,
		"allowJs": true,
		"checkJs": true,
		"strict": true,

		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"skipLibCheck": true,
		"paths": {
			"react": ["./node_modules/preact/compat/"],
			"react-dom": ["./node_modules/preact/compat/"]
		},
		"types": [
			"node",
			"webdriverio/async",
			"@wdio/mocha-framework",
			"expect-webdriverio"
		]
	}
}
